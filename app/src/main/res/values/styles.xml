    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@color/color_red_900</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="GenreTitle">
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:layout_marginBottom">@dimen/dp_4</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_orange</item>
    </style>
</resources>
